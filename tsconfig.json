{
  "compilerOptions": {
    "outDir": "dist/",
    "esModuleInterop": true,
    "module": "CommonJS",
    "sourceMap": true,
    "target": "es5",
    "lib": ["ES2019", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
